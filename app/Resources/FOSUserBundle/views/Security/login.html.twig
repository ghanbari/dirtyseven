{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="login">
    <form id="login" class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <input name="_username" value="{{ last_username }}" type="text" placeholder="Email" required="required" />
        <input name="_password" type="password" placeholder="Password" required="required" />
        <div class="button-group left">
            <a class="button" onclick="document.getElementById('login').submit();" style="cursor: pointer">Login</a>
            <a class="button" href="{{ path('fos_user_registration_register') }}">Register</a>
        </div>
        <div class="button-group right">
            <a class="button" href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">Google</a>
            <a class="button" href="{{ path('hwi_oauth_service_redirect', {'service': 'yahoo'}) }}">Yahoo</a>
        </div>
    </form>
</div>
{% endblock fos_user_content %}